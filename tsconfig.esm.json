{
	"compilerOptions": {
		"outDir": "esm",
		"target": "ES2016",
		"module": "ES6",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowUmdGlobalAccess": true,
		"downlevelIteration": true,
		"skipLibCheck": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"noEmitOnError": true,
		"strict": true,
		"noImplicitAny": false,
		"typeRoots": ["node_modules/@types", "dist/types", "esm/types"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist", "esm", "__test__/**/*.{test.ts,spec.ts}", "coverage", ".github"]
}
